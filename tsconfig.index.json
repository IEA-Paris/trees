{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "outDir": "./",
    "strict": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false
  },
  "files": ["index.ts"],
  "exclude": ["lib/**/*"]
}
